<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="hr_timesheet.portal_timesheet_table" name="Portal Timesheet Table" inherit_id="hr_timesheet.portal_timesheet_table">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Employee</th>
                    <th class="text-right">Duration</th>
                </tr>
            </thead>
            <tr t-foreach="timesheets" t-as="timesheet">
                <td><t t-esc="timesheet.date" t-options='{"widget": "date"}'/></td>
                <td><t t-esc="timesheet.jira_issue_key"/></td>
                <td><t t-esc="timesheet.employee_id.name"/></td>
                <td class="text-right"><span t-field="timesheet.unit_amount" t-options='{"widget": "duration", "unit": "hour", "round": "minute"}'/></td>
            </tr>
        </table>
    </template>

</odoo>
